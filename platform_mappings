# This file allows automatically mapping flags such as '--cpu' to the more
# modern Bazel platforms (https://bazel.build/concepts/platforms).

flags:
  --cpu=x86
  --crosstool_top=//external:android/crosstool
    //:android_x86_platform

  --cpu=x86_64
  --crosstool_top=//external:android/crosstool
    //:android_x86_64_platform

  --cpu=armeabi-v7a
  --crosstool_top=//external:android/crosstool
    //:android_arm_platform

  --cpu=arm64-v8a
  --crosstool_top=//external:android/crosstool
    //:android_arm64_platform

  --cpu=darwin_x86_64
  --apple_platform_type=macos
    //:macos_x86_64_platform

  --cpu=darwin_arm64
  --apple_platform_type=macos
    //:macos_arm64_platform
